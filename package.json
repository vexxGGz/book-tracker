{
  "name": "book-tracker",
  "version": "1.0.1",
  "type": "module",
  "description": "A modern book tracking app with analytics - track your reading journey with format, source, and review publishing status",
  "author": {
    "name": "Book Tracker"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl",
    "publish": "npm run build && electron-builder --win --publish always",
    "publish:mac": "npm run build && electron-builder --mac --publish always",
    "publish:all": "npm run build && electron-builder -mwl --publish always"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "uuid": "^13.0.0"
  }
}
